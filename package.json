{
  "name": "@fohte/eslint-config",
  "description": "ESLint config for fohte",
  "version": "0.0.4",
  "type": "module",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/fohte/eslint-config.git"
  },
  "author": "fohte <fohte.hk@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib tsconfig.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "npx tsc && npm run copy-types",
    "copy-types": "mkdir -p lib/types && cp src/types/*.d.ts lib/types/",
    "watch": "tsc -w",
    "lint": "eslint src",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "npm run build && npm run lint && npm run test:coverage",
    "prepublishOnly": "npm run lint && npm run build",
    "postbuild": "npm run validate-build",
    "validate-build": "publint"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-simple-import-sort": "10.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.29.0",
    "@tsconfig/node20": "20.1.4",
    "@types/eslint": "8.56.10",
    "@types/eslint__eslintrc": "2.1.1",
    "@vitest/coverage-v8": "^3.2.3",
    "bun-types": "latest",
    "publint": "^0.3.12",
    "rimraf": "^6.0.1",
    "typescript": "5.4.5",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "typescript": "5.4.5"
  }
}
