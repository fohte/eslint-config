{
  "name": "@fohte/eslint-config",
  "description": "ESLint config for fohte",
  "version": "0.1.2",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./typescript": {
      "types": "./lib/typescript.d.ts",
      "import": "./lib/typescript.js"
    }
  },
  "files": [
    "lib",
    "!lib/**/*.map",
    "!lib/**/*.test.*"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/fohte/eslint-config.git"
  },
  "author": "fohte <fohte.hk@gmail.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rimraf lib tsconfig.tsbuildinfo",
    "prebuild": "pnpm run clean",
    "build": "tsc && pnpm run copy-types",
    "copy-types": "mkdir -p lib/types && cp src/types/*.d.ts lib/types/",
    "watch": "tsc -w",
    "lint": "eslint src",
    "test": "vitest",
    "prepublishOnly": "pnpm run lint && pnpm run build",
    "postbuild": "pnpm run validate-build",
    "validate-build": "publint"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@eslint/eslintrc": "3.3.3",
    "@tsconfig/node22": "22.0.0",
    "bun-types": "latest",
    "prettier": "3.7.4",
    "publint": "0.3.17",
    "rimraf": "6.0.1",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
